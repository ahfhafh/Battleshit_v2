<Window x:Class="Battleshit.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Battleshit"
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="1280"
        Background="{StaticResource BackgroundColor}">
    <Grid>
        <Border BorderBrush="Black" BorderThickness="4" Height="408" Margin="150,100,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="408" >
            <UniformGrid x:Name="Board1"
                         Width="400"
                         Height="400"
                         Background="{StaticResource BoardBackgroundColor}" HorizontalAlignment="Center"/>
        </Border>
        <Border BorderBrush="Black" BorderThickness="4" Width="408" Height="408" Margin="0,100,150,0" HorizontalAlignment="Right" VerticalAlignment="Top"/>
    </Grid>
</Window>
